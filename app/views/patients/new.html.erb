<% provide(:title, "Patients") %>
<div class="jumbotron">
<h1>Patients</h1>
<p>Patients are listed below.</p>

<%= form_tag(patients_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Patients" %>
<%= submit_tag "Search", :name => nil %>
<% end %>

<% if @patients.present? %>
  <%= render @patients %>
<% else %>
<ul>
<% @patients.each do |patient| %>
  <div class="patient">
      <li><%= patient.fname %> <%= patient.lname %></li>
  </div>
</ul>
<% end %>
</div>
<% end %>

</div>

 