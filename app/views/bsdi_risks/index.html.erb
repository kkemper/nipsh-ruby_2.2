<p id="notice"><%= notice %></p>

<h1>Listing Bsdi Risks</h1>

<table>
  <thead>
    <tr>
      <th>Bsdi report</th>
      <th>Bsdi risk stratification</th>
      <th>Bsdi risk factor count</th>
      <th>Bsdi self rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bsdi_risks.each do |bsdi_risk| %>
      <tr>
        <td><%= bsdi_risk.bsdi_report_id %></td>
        <td><%= bsdi_risk.bsdi_risk_stratification %></td>
        <td><%= bsdi_risk.bsdi_risk_factor_count %></td>
        <td><%= bsdi_risk.bsdi_self_rating %></td>
        <td><%= link_to 'Show', bsdi_risk %></td>
        <td><%= link_to 'Edit', edit_bsdi_risk_path(bsdi_risk) %></td>
        <td><%= link_to 'Destroy', bsdi_risk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

